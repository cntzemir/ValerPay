# =========================
# ValerPay - Environment Template
# Copy values into the right place:
# - Backend:  src/backend/.env
# - Admin UI: src/frontend/admin/.env.local
# - User UI:  src/frontend/user/.env.local
# =========================

# ---- Backend (NestJS + Prisma) ----
# SQLite demo (recommended for quick local setup)
DATABASE_URL="change_me"

# Change this in real deployments
JWT_SECRET="change_me"

# API port (defaults to 3001)
PORT=3001

# Comma-separated allowed origins for CORS
# Admin UI (default): http://localhost:3000
# User UI  (default): http://localhost:3002
CORS_ORIGINS="http://localhost:3000,http://localhost:3002"

# ---- Frontend (Next.js) ----
# Public API base URL used by both frontends
NEXT_PUBLIC_API_URL="http://localhost:3001"
